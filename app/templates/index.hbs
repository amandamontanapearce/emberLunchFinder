<div class="container">
  {{partial 'navbar'}}
  {{outlet}}
</div>
<div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-med-6 col-med-offset-4">
        <div class="panel panel-default">
            <form name="searchForm">
                <div class="form-group">
                    <label for="location">Location?</label>
                    <div class="input-group">
                        {{input class="form-control" placeholder="1234 S. Main St. Town State" autofocus="autofocus"}}
                        <span class="input-group-btn">
                            <button class="btn btn-default" {{action 'chooseGeolocation'}} type="button">Use Current Location</button>
                        </span>
                    </div>
                    {{#if geolocation}}
                    <p>Using geolocation</p>
                    {{/if}}
                </div>
                <div class="form-group">
                    <label for="radius">How far are you willing to travel?(distance in km)</label>
                    {{input id="radius" type="number" name="radius" value="" placeholder="km" min=1 max=500 autofocus="autofocus" required="required"}}
                    {{#if isValidRange}}
                    <span>Please input a number from 1 to 500</span>
                    {{/if}}
                </div>
                <div class="form-group">
                    <label for="minPrice">Least you would like to spend?</label>
                    <input id="minPrice" type="number" name="minPrice" value="" placeholder="(optional)" autofocus="autofocus">
                    <label for="maxPrice">Most you would like to spend?</label>
                    <input id="maxPrice" type="number" name="maxPrice" value="" placeholder="(optional)" autofocus="autofocus">
                </div>
                <div class="form-group">
                    <label for="isOpen" class="form-check-label">
                        <input id="isOpen" name="isOpen" type="checkbox" class="form-check-input" autofocus="autofocus">
                        Check for Restuarants Currently Open
                    </label>
                </div>
                <button disabled={{isDisabled}} class="btn btn-primary btn-block">Find Some Lunch!</button>
            </form>
        </div>
    </div>
</div>
